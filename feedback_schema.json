{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FeedbackClassification",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The feedback title."
    },
    "theme": {
      "type": "string",
      "description": "Short label grouping feedback."
    },
    "category": {
      "type": "string",
      "enum": [
        "Bug",
        "Feature Request",
        "Usability Issue",
        "Content Suggestion",
        "Other"
      ]
    },
    "severity": {
      "type": "string",
      "enum": ["Low","Medium","High","Critical"]
    },
    "product": {
      "type": "string",
      "enum": ["Marketplace","Training Center","Client & Patient Resources"]
    },
    "status": {
      "type": "string",
      "enum": ["New","Needs Review","In Backlog","Done"]
    },
    "notes": {
      "type": "string",
      "description": "Any extra freeâ€‘text notes."
    }
  },
  "required": [
    "title","theme","category","severity","product","status","notes"
  ],
  "additionalProperties": false
}
